{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    /* Node Stuff */
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    /* If your code doesn't run in the DOM: */
    "lib": [
      "es2022"
    ],
    /* Paths for workspace aliases */
    "baseUrl": ".",
    "paths": {
      "@ollama-ts/caic": [
        "packages/caic"
      ],
      "@ollama-ts/weather-gov-client": [
        "packages/weather-gov-client"
      ],
      "@ollama-ts/caic-incidents": [
        "packages/caic-incidents"
      ],
      "@ollama-ts/caic-report-screenshot": [
        "packages/caic-report-screenshot"
      ]
    }
  },
  "include": [
    "apps/**/*.ts",
    "packages/**/*.ts"
  ]
}
